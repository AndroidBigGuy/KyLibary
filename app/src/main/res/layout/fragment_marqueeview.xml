<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ls.kylibary.custview.MarqueeViewFragment">
    <LinearLayout
        android:layout_gravity="top|center"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/kj_space_30"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/tt" />

        <View
            android:layout_width="10dp"
            android:background="@color/red"
            android:layout_margin="@dimen/kj_space_15"
            android:layout_height="match_parent"
            />


        <com.ls.libarys.view.MarqueeView
            android:id="@+id/marqueeView1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            app:mvAnimDuration="1000"
            app:mvDirection="bottom_to_top"
            app:mvInterval="2000"
            app:mvSingleLine="true"
            app:mvTextColor="#666"
            app:mvTextSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/kj_space_30"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/tt" />

        <View
            android:layout_width="10dp"
            android:background="@color/red"
            android:layout_margin="@dimen/kj_space_15"
            android:layout_height="match_parent"
            />


        <com.ls.libarys.view.MarqueeView
            android:id="@+id/marqueeView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            app:mvAnimDuration="1000"
            app:mvDirection="left_to_right"
            app:mvInterval="2000"
            app:mvSingleLine="true"
            app:mvTextColor="@color/material_yellow"
            app:mvTextSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/kj_space_30"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/tt" />

        <View
            android:layout_width="10dp"
            android:background="@color/red"
            android:layout_margin="@dimen/kj_space_15"
            android:layout_height="match_parent"
            />


        <com.ls.libarys.view.MarqueeView
            android:id="@+id/marqueeView3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            app:mvAnimDuration="1000"
            app:mvDirection="right_to_left"
            app:mvGravity="left"
            app:mvTextColor="@color/red"
            app:mvInterval="2000"
            app:mvSingleLine="true"
            app:mvTextSize="12sp" />
    </LinearLayout>



</FrameLayout>
