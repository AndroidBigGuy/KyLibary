<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/kj_space_10"
    android:layout_marginBottom="@dimen/kj_space_20"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/biv"
        android:layout_width="wrap_content"
        android:text="热点新闻"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_16"
        android:textColor="#1F201C"
        android:layout_height="match_parent"
         />
    <TextView
        android:id="@+id/tv_newmore"
        android:layout_width="wrap_content"
        android:text="查看更多"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_12"
        android:drawablePadding="@dimen/kj_space_5"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/rig"
        android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>